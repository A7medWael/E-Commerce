@using myshop.Entities.Models
@model IEnumerable<ApplicationUser>

@{
    ViewBag.PageTitle = "Usres Management";
    ViewBag.CardTitle = "View users";
}

<div>
    <a class="btn btn-success" href="/Identity/Account/Register">Create New User</a>

</div>
<hr />
<table class="table table-hover" width="100%">
    <tr>
        <td>Name</td>
        <td>Email</td>
        <td>Address</td>
        <td>Actions</td>
    </tr>
    @foreach(var i in Model)
    {
        <tr>
            <td>@i.Name</td>
            <td>@i.Email</td>
            <td>@i.Address</td>
            <td>
                @if(i.LockoutEnd==null| i.LockoutEnd < DateTime.Now)
                {
                    <a class="btn btn-success" asp-action="LockUnLock" asp-route-id="@i.Id"><i class="fas fa-lock-open" ></i></a>
                }
                else{
                <a class="btn btn-danger" asp-action="LockUnLock" asp-route-id="@i.Id"><i class="fas fa-lock"></i></a>
                }
               
                

                @* <a href="Category/Edit/@i.Id"class="btn btn-success">Edit</a> *@
               <a href="/Category/Delete/@i.Id"class="btn btn-danger">Delete</a>
            </td>

        </tr>
    }
</table>
